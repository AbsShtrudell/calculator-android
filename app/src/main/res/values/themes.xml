<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name ="Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginTop">3sp</item>
        <item name="android:layout_marginBottom">3sp</item>
        <item name="android:layout_marginRight">3sp</item>
        <item name="android:layout_marginLeft">3sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:minWidth">55dp</item>
    </style>

    <style name ="ButtonM" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginRight">3sp</item>
        <item name="android:layout_marginLeft">3sp</item>
        <item name="android:textColor">#1b1b1b</item>
    </style>

    <style name ="Button.Primary">
        <item name="android:backgroundTint">@color/white_200</item>
        <item name="android:onClick">@color/black</item>
        <item name="android:textAppearance">@style/Text.Primary</item>
        <item name="android:textColor">#1b1b1b</item>
    </style>

    <style name ="Button.Secondary">
        <item name="android:textAppearance">@style/Text.Primary</item>
        <item name="android:backgroundTint">@color/white_500</item>
        <item name="android:textColor">#1b1b1b</item>
    </style>

    <style name ="Button.Accent">
        <item name="android:textAppearance">@style/Text.Accent</item>
        <item name="android:backgroundTint">@color/blue_200</item>
        <item name="android:textColor">#deebf7</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/armata</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">#1b1b1b</item>
    </style>

    <style name="Text.Accent">
        <item name="android:textColor">#deebf7</item>
    </style>

    <style name="TextIcon" parent="Text.Primary">
        <item name="android:font">@font/icofont</item>
    </style>
</resources>